<Window x:Class="TileMan.Dialogs.DialogLayerCopy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DialogLayerCopy" Height="auto" Width="auto" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <RadioButton Name="RadioButtonShared" Grid.ColumnSpan="2" IsChecked="True">shared resource</RadioButton>
        <RadioButton Name="RadioButtonNew" Grid.Row="1" Grid.ColumnSpan="2">as new independent</RadioButton>
        <Button Name="ButtonOK" Grid.Row="2" IsDefault="True" Click="ButtonOK_Click">OK</Button>
        <Button Name="ButtonCancel" Grid.Row="2" Grid.Column="1" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
